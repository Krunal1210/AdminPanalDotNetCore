@model Student
@{
    ViewData["Title"] = "Create Student";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Student
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Settings</a></li>
        <li class="active">My Profile</li>
    </ol>
</section>


<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-lg-2">

        </div>
        <!-- /.col -->

        <div class="col-lg-8">

            <!-- Profile Settings -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Create Student</h3>
                </div>
                <div class="box-body box-profile">
                    <form class="form-horizontal" method="post" asp-action="Create">
                        <div class="form-group">
                            <label for="inputUserName" class="col-sm-2 control-label">Name</label>

                            <div class="col-sm-10">
                                <input asp-for="Name" class="form-control" id="inputUserName" placeholder="Name">
                                <span asp-validation-for="Name" class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                    <input asp-for="EmailID" type="email" class="form-control" id="inputEmail" placeholder="Email">
                                    
                                <span asp-validation-for="EmailID" class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPhone" class="col-sm-2 control-label">Phone</label>

                            <div class="col-sm-10">
                                <input asp-for="MobileNo" class="form-control" id="inputPhoneNumber" placeholder="Phone" data-inputmask='"mask": "9999999999"' data-mask>
                                <span asp-validation-for="MobileNo" class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputDOB" class="col-sm-2 control-label">DOB</label>

                            <div class="col-sm-10">
                                <input asp-for="DOB" id="inputDOB" type="text" class="form-control" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask>
                                <span asp-validation-for="DOB" class="help-block"></span>
                            </div>
                        </div>
<div class="form-group row">
        <label asp-for="Gender" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
                <label class="radio-inline">
                    <input type="radio" asp-for="Gender" value="Male" id="GenderMale" />Male<br />
                </label>
                <label class="radio-inline">
                    <input type="radio" asp-for="Gender" value="Female" id="GenderFemale" />Female<br />
                </label>
        </div>
    </div>                    
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

        <div class="col-lg-2">

        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

</section>
<!-- /.content -->

@section Scripts {
    <!-- InputMask -->
    <script src="~/libs/inputmask/jquery.inputmask.bundle.min.js"></script>

    <!-- Page script -->
    <script>
        $(function () {
            //InputMask
            $('[data-mask]').inputmask();
        });
    </script>
}
